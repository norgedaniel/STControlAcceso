@model ZonaHorariaViewModel

@using STCA_WebApp.Extensions;


@{
    ViewData["Title"] = "Zonas Horarias";
}

@section Scripts{
    <script type="text/javascript">

        function delSubmit() {

            var form = $("#delForm");
            let itemsId = separador = '';

            document.querySelectorAll('.done-checkbox').forEach(function (checkElement) {
                if (checkElement.checked) {
                    checkElement.disabled = true;
                    itemsId = itemsId + separador + checkElement.value;
                    separador = ',';
                }
            });

            var lista = document.getElementById("itemsId");

            lista.value = itemsId;

            form.submit();

        }

    </script>
}

<div class="panel panel-default">

    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#10003</td>
                <td>
                    <a asp-action="Index" asp-route-getOption="NOMBRE">Nombre</a>
                </td>
                <td>
                    <form method="post" asp-action="RefrescaForm">
                        <label class="control-label">Tamaño de página:</label>
                        <select name="PageZise" class="form-control" asp-items="@ViewBag.pageZiseOptions"></select>
                        <button type="submit">Refrescar</button>
                    </form>
                </td>
                @{
                    //if (ViewBag.PagingOption.PagesCount > 1)
                    //{
                    //    <td>
                    //        <a asp-controller="ZonaHoraria" asp-route-getOption="INI">&#60;&#60;</a>&#32;&#32;&#32;&#32;
                    //        <a asp-controller="ZonaHoraria" asp-route-getOption="ANT">&#60;</a>&#32;&#32;&#32;&#32;
                    //        @{
                    //            ViewBag.PagingOption.PageNumberZeroBase++;
                    //        }
                    //        Página @ViewBag.PagingOption.PageNumberZeroBase de @ViewBag.PagingOption.PagesCount
                    //        <a asp-controller="ZonaHoraria" asp-route-getOption="SIG">&#62;</a>&#32;&#32;&#32;&#32;
                    //        <a asp-controller="ZonaHoraria" asp-route-getOption="FIN">&#62;&#62;</a>&#32;&#32;&#32;
                    //    </td>
                    //}
                }
            </tr>

        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <input class="done-checkbox" type="checkbox" value="@item.Id">
                </td>
                <td>@item.Nombre</td>
            </tr>
        }
    </table>

</div>

<div class="panel-footer add-item-form">
    <table>
        <tr>
            <td>
                <form id="delForm" method="post" asp-action="Delete">
                    <input type="button" value="Eliminar" id="Save" onclick="javascript:delSubmit()" />
                    <input type="hidden" name="itemsId" id="itemsId" />
                </form>
            </td>
            <td>
                @await Html.PartialAsync("AddItemPartial", new ZonaHoraria())
            </td>
        </tr>
    </table>
</div>




